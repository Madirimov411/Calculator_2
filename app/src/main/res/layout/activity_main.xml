<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_c"
                    style="@style/normal_button"
                    android:background="@drawable/buttonbackground"
                    android:text="C"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_plus_minus"
                    style="@style/normal_button"
                    android:background="@drawable/buttonraqamlarbackground"
                    android:text="+/-"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_foiz"
                    style="@style/normal_button"
                    android:background="@drawable/buttonraqamlarbackground"
                    android:text="%"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_7"
                    style="@style/normal_button"
                    android:background="@drawable/buttonraqamlarbackground"
                    android:text="7"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_88"
                    style="@style/normal_button"
                    android:background="@drawable/buttonraqamlarbackground"
                    android:text="8"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_9"
                    style="@style/normal_button"
                    android:background="@drawable/buttonraqamlarbackground"
                    android:text="9"/>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_4"
                    style="@style/normal_button"
                    android:background="@drawable/buttonraqamlarbackground"
                    android:text="4"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_5"
                    style="@style/normal_button"
                    android:background="@drawable/buttonraqamlarbackground"
                    android:text="5"/>
                <androidx.appcompat.widget.AppCompatButton
                    style="@style/normal_button"
                    android:background="@drawable/buttonraqamlarbackground"
                    android:text="6"/>

            </LinearLayout>
            <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b_1"
                style="@style/normal_button"
                android:background="@drawable/buttonraqamlarbackground"
                android:text="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b_2"
                style="@style/normal_button"
                android:background="@drawable/buttonraqamlarbackground"
                android:text="2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b_3"
                style="@style/normal_button"
                android:background="@drawable/buttonraqamlarbackground"
                android:text="3"/>

        </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_0"
                    style="@style/normal_button"
                    android:background="@drawable/buttonraqamlarbackground"
                    android:text="0"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_."
                    style="@style/normal_button"
                    android:background="@drawable/buttonraqamlarbackground"
                    android:text="."/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_teng"
                    style="@style/normal_button"
                    android:background="@drawable/buttonraqamlarbackground"
                    android:text="="/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <LinearLayout
                android:layout_weight="1.9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_bolish"
                    style="@style/normal_button"
                    android:background="@drawable/buttonbackground"
                    android:text="/"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_kopaytirish"
                    style="@style/normal_button"
                    android:textSize="26sp"
                    android:background="@drawable/buttonbackground"
                    android:text="x"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_ayirish"
                    style="@style/normal_button"
                    android:background="@drawable/buttonbackground"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2.85"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_qoshish"
                    style="@style/normal_button"
                    android:background="@drawable/buttonbackground"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>